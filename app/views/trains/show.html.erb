<!-- 投稿詳細ページ -->
<div class="container">
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <h2>投稿詳細</h2>

      <!-- 投稿内容を表示 -->
      <%= render 'trains/info', train: @train %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 mx-auto text-center" style="margin-top: 30px;">
      <%= link_to '編集ページへ', edit_train_path(@train.id), class: "btn btn-info", style: "margin-right:50px;" %>
      <%= link_to 'ホームへ', root_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>