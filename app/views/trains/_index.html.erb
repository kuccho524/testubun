<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>投稿者</th>
      <th>鉄道会社</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% trains.each do |train| %>
      <tr>
        <td>
          <%= link_to train_path(train.id) do %>
            <%= attachment_image_tag(train, :train_image, :fill, 100, 100, fallback: "no_image.jpg") %>
          <% end %>
        </td>
        <td><%= train.user.name %></td>
        <td><%= train.company %></td>
        <td><%= train.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>