<!-- 投稿履歴一覧ページ -->
<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h1 class="heading">投稿履歴一覧</h1>
    </div>
    <div class="col-12 mx-auto">
      <div class="user-info">
        <div class="col-3">
          <!-- ユーザ情報を更新 -->
          <%= render 'users/info', user: @user %>
        </div>
        <div class="col-9">
          <!-- 投稿履歴一覧テーブル -->
        <%= render 'users/user-trains', trains: @trains %>
        </div>
      </div>
    </div>
    <div class="pagination mx-auto" style="margin-bottom: 30px;">
      <%= paginate @trains %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 mx-auto text-center">
      <div class="links" style="margin-bottom: 20px;">
      <%= link_to '投稿一覧へ', trains_path, class: "btn btn-primary" %>　|　<%= link_to 'ホームへ', root_path, class: "btn btn-secondary", data: {"turbolinks" => false} %>
    </div>
    </div>
  </div>
</div>