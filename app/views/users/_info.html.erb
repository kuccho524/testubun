<!-- ユーザーの情報を表示 -->
<%= attachment_image_tag(user, :profile_image, width: "100px", height: "100px", fallback: "no_image.jpg") %>
<table>
  <th>ユーザ名</th>
  <th>　</th>
  <th><%= user.name %></th>
</table>
<section class="introduction">
  <p>
   <strong>紹介文</strong><br>
   <%= user.introduction %>
  </p>
</section>
<table>
  <tr>
	  <th>フォロー</th>
	  <th>　</th>
	  <th><%= link_to user.followings.count, user_follows_path(user.id) %></th>
  </tr>
  <tr>
	  <th>フォロワー</th>
	  <th>　</th>
	  <th><%= link_to user.followers.count, user_followers_path(user.id) %></th>
  </tr>
</table>

<% if @user.id == current_user.id %>

<% else %>
  <% if @isRoom == true %>
    <p><a href="/rooms/<%= @roomId %>">チャットへ</a>
  <% else %>
    <%= form_for @room do |f| %>
      <%= fields_for @entry do |e| %>
        <%= e.hidden_field :user_id, :value=> @user.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>

<!-- 更新画面へのリンク -->
<% if current_user != user %>
  <div id="follow">
    <%= render 'relationships/follow_btn', user: user %>
  </div>
<% else %>
  <div class="edit-link">
    <%= link_to '',edit_user_path(user), class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
  </div>
<% end %>
