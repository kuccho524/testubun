<table class='table'>
<% users.each do |user| %>
  <tr>
    <td>
      <%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
    <td>
      <%= link_to user_path(user) do %>
        <%= user.name %>
      <% end %>
    </td>
    <td>フォロー数: <%= user.followings.count %></td>
    <td>フォロワー数: <%= user.followers.count %></td>
    <% if current_user != user %>
      <% if current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %></td>
      <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>