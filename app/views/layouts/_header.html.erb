<!-- headerリスト -->
<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <strong><%= link_to '鉄分', root_path, class: 'navbar-brand text-white', data: {"turbolinks" => false} %></strong>
      <% if user_signed_in? %>
        <p style="margin: 5px; margin-left: 50px; color: #fff;">ようこそ、<%= current_user.name %> さん！</p>
      <% end %>
      <p id="notice" style="margin: 5px; margin-left: 50px;"><%= notice %></p>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <ul class="navbar-nav ml-auto">
          <% if user_signed_in? %>
            <%= render 'layouts/user_signin' %>
          <% else %>
            <%= render 'layouts/nouser' %>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>