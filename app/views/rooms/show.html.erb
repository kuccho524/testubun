<div class="container">
  <div class="row">
    <div class="col-sm-12 mx-auto">
      <h1 class="heading">チャット</h1>
      <div class="chat-users">
        <% @entries.each do |e| %>
          <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.name %>さん</a></strong></h5>
        <% end %>
      </div>

      <hr>
      <% if @messages.present? %>
        <% @messages.each do |m| %>
          <strong><%= m.message %></strong>
          <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %>さん</a></strong></small>
          <hr>
        <% end %>
      <% else %>
        <h3 class="text-center">メッセージはまだありません</h3>
      <% end %>

      <section class="message-form">
        <%= form_for @message do |f| %>
          <%= f.text_area :message, :placeholder => "メッセージを入力して下さい" , size: '135x6' %>
          <%= f.hidden_field :room_id, :value => @room.id %><br>
          <div class="messsage-submit-btn">
            <%= f.submit "投稿する", class: "btn btn-success" %>
          </div>
        <% end %>
      </section>

    </div>
  </div>
</div>




